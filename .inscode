run = "pip install -r requirements.txt && streamlit run app.py --server.port=8501 --server.address=0.0.0.0"
language = "python"
is_html = false
is_resident = false
is_gui = false

[packager]
AUTO_PIP = true

[env]
PATH = "${VENV_PATH}/bin:${PATH}"
PYTHONPATH = "${VENV_PATH}/lib/python3.10/site-packages"
REPLIT_POETRY_PYPI_REPOSITORY = "https://pypi.org/simple"  # 使用官方源避免问题
# 如果运行环境无图形界面，使用 Agg 后端
MPLBACKEND = "Agg"

[debugger]
program = "app.py"